<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Share-Me | Upload</title>

  <link rel="stylesheet" href="/css/index.css">
</head>

<body>
  <nav>
    <h2>SHARE-ME</h2>
  </nav>
  <div class="container">
    <h1>UPLOAD YOUR FILE</h1>
    <form id="uploadForm" class="file-upload-form" enctype="multipart/form-data">
      <label for="file" class="file-upload-label">
        <div class="file-upload-design">
          <svg viewBox="0 0 640 512" height="1em">
            <path
              d="M144 480C64.5 480 0 415.5 0 336c0-62.8 40.2-116.2 96.2-135.9c-.1-2.7-.2-5.4-.2-8.1c0-88.4 71.6-160 160-160c59.3 0 111 32.2 138.7 80.2C409.9 102 428.3 96 448 96c53 0 96 43 96 96c0 12.2-2.3 23.8-6.4 34.6C596 238.4 640 290.1 640 352c0 70.7-57.3 128-128 128H144zm79-217c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l39-39V392c0 13.3 10.7 24 24 24s24-10.7 24-24V257.9l39 39c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-80-80c-9.4-9.4-24.6-9.4-33.9 0l-80 80z">
            </path>
          </svg>
          <span style="font-size: 1.5rem;">Drag and Drop</span>
          <span>or</span>
          <span class="browse-button">Browse file</span>
        </div>
        <input id="file" type="file" name="myfile" required />
      </label>
      <button type="submit">Upload</button>
    </form>
    <div id="progressContainer" style="display: none; margin-top: 1rem;">
      <progress id="progressBar" value="0" max="100" style="width: 100%; height: 20px;"></progress>
      <span id="progressText" style="color: white;">0%</span>
    </div>

    <div id="linkSection">
      <p style="color: white;"><strong>Share this link:</strong></p>
      <input type="text" id="fileLink" readonly title="Click to copy the link" />
      <form id="emailForm">
        <input type="email" name="emailTo" placeholder="Recipient's email" required />
        <input type="email" name="emailFrom" placeholder="Your email" required />
        <input type="hidden" name="uuid" id="uuid" />
        <button type="submit">Send via Email</button>
      </form>
    </div>

    <div id="message" class="alert" style="display:none;"></div>
    <div id="loading" class="loading" style="display:none;">Uploading file...</div>
  </div>

  <script>
    const uploadForm = document.getElementById('uploadForm');
    const linkSection = document.getElementById('linkSection');
    const fileLink = document.getElementById('fileLink');
    const uuidInput = document.getElementById('uuid');
    const message = document.getElementById('message');
    const loading = document.getElementById('loading');

    uploadForm.addEventListener('submit', (e) => {
  e.preventDefault();
  message.style.display = 'none';
  loading.style.display = 'block';
  linkSection.style.display = 'none';
  document.getElementById('progressContainer').style.display = 'block';

  const formData = new FormData(uploadForm);
  const xhr = new XMLHttpRequest();

  xhr.open('POST', '/api/files/upload');

  xhr.upload.addEventListener('progress', (event) => {
    if (event.lengthComputable) {
      const percentComplete = Math.round((event.loaded / event.total) * 100);
      document.getElementById('progressBar').value = percentComplete;
      document.getElementById('progressText').textContent = `${percentComplete}%`;
    }
  });

  xhr.onload = () => {
    loading.style.display = 'none';
    if (xhr.status === 200) {
      const data = JSON.parse(xhr.responseText);
      const fileUrl = data.file;
      const uuid = fileUrl.split('/').pop();

      fileLink.value = fileUrl;
      uuidInput.value = uuid;
      linkSection.style.display = 'block';
    } else {
      const err = JSON.parse(xhr.responseText);
      message.textContent = err.error || 'Upload failed';
      message.style.display = 'block';
    }
    document.getElementById('progressContainer').style.display = 'none';
  };

  xhr.onerror = () => {
    message.textContent = 'Something went wrong during the upload.';
    message.style.display = 'block';
    loading.style.display = 'none';
    document.getElementById('progressContainer').style.display = 'none';
  };

  xhr.send(formData);
});

  </script>
</body>

</html>